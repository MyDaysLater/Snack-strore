.cart {
  width: 100vw;
  height: 100vh;
  position: relative;
}
.cart .cart-list {
  height: 200rpx;
}
.cart .cart-list .cart-list-item {
  width: 100vw;
  display: flex;
  align-items: center;
  height: 200rpx;
}
.cart .cart-list .cart-list-item .icon {
  padding: 30rpx;
}
.cart .cart-list .cart-list-item .middle {
  width: 60%;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
  text-align: center;
}
.cart .cart-list .cart-list-item .middle .middle-top {
  font-size: 40rpx;
  font-weight: 700;
  height: 100rpx;
  line-height: 100rpx;
}
.cart .cart-list .cart-list-item .middle .middlde-bottom {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.cart .cart-list .cart-list-item .middle .middlde-bottom .sub {
  font-size: 40rpx;
  padding: 20rpx;
}
.cart .cart-list .cart-list-item .middle .middlde-bottom .num {
  font-size: 40rpx;
  padding: 20rpx;
}
.cart .cart-list .cart-list-item .middle .middlde-bottom .add {
  font-size: 40rpx;
  padding: 20rpx;
}
.cart .cart-list .cart-list-item .right {
  width: 20%;
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.cart .cart-list .cart-list-item .right .right-price {
  height: 100rpx;
  line-height: 100rpx;
}
.cart .cart-list .cart-list-item .right .delete {
  height: 100rpx;
  line-height: 100rpx;
}
.cart .cart-bottom {
  position: absolute;
  height: 120rpx;
  width: 100vw;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #aa976c;
}
.cart .cart-bottom .left {
  height: 100%;
  line-height: 100%;
  display: flex;
  align-items: center;
  position: relative;
}
.cart .cart-bottom .left .left-icon {
  height: 100%;
  line-height: 120rpx;
  width: 90rpx;
  padding: 20rpx;
}
.cart .cart-bottom .left .left-icon .icon {
  position: absolute;
  top: 28%;
}
.cart .cart-bottom .left .all {
  color: white;
}
.cart .cart-bottom .right {
  width: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 60rpx;
  position: relative;
}
.cart .cart-bottom .right .price {
  color: white;
}
.cart .cart-bottom .right .img .image {
  width: 50rpx;
  position: absolute;
  top: 0;
}

.goods .goods-cart {
    margin: 20rpx;
    float: right;
    position: relative;
  }
  .goods .goods-cart .icon {
    height: 80rpx;
    width: 80rpx;
  }
  .goods .goods-cart .num {
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    border-radius: 50%;
    font-size: 20rpx;
    width: 30rpx;
    color: white;
    background-color: #aa976c;
    position: absolute;
    top: 0;
    left: 0;
  }
  .goods .goods-cart .hide {
    display: none;
  }
  .goods .cls {
    clear: both;
  }
  .goods .goods-detail .image-wrapper {
    margin: 0 auto;
    width: 50vw;
  }
  .goods .goods-func {
    display: flex;
    align-items: center;
    justify-content: space-around;
    height: 100rpx;
    width: 90%;
    margin: 0 auto;
    background-color: #aa976c;
    border-radius: 50rpx;
    color: white;
  }
  .goods .goods-func .quantity {
    flex: 2;
    display: flex;
    justify-content: center;
  }
  .goods .goods-func .add {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  .goods .goods-func .text {
    flex: 2;
    display: flex;
    justify-content: center;
  }
  .goods .goods-func .image-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
  
  }
  .goods .goods-func .image-wrapper image {
    width: 50rpx;
  }
  .goods .goods-detail .stock {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
  }
  .goods .goods-detail .title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 50rpx;
  }
  .goods .goods-detail .price {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 50rpx;
  }
  .goods .goods-detail .goods-content .navs {
    display: flex;
  }
  .goods .goods-detail .goods-content .navs .navs-item {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
  }
  .goods .goods-detail .goods-content .navs .active {
    border-bottom: 5rpx solid #aa976c;
    color: #aa976c;
  }
  